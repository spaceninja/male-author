{
  "name": "male-author-description-generator",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "run-s lint:js lint:css lint:prettier",
    "lint:check": "run-s lint:*:check",
    "lint:js": "eslint --fix .",
    "lint:js:check": "eslint .",
    "lint:css": "stylelint --fix '**/*.scss'",
    "lint:css:check": "stylelint '**/*.scss'",
    "lint:prettier": "prettier --write . '!dist/**/*'",
    "lint:prettier:check": "prettier --check . '!dist/**/*'"
  },
  "dependencies": {
    "lodash.sample": "4.2.1",
    "widont": "0.3.3"
  },
  "devDependencies": {
    "eslint": "8.10.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.25.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "sass": "1.49.9",
    "stylelint": "14.3.0",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-spaceninja": "9.0.1",
    "vite": "2.7.13"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "ignorePatterns": [
      "dist/**/*",
      "**/*.html"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-spaceninja",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "dist/**/*"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "html"
        }
      }
    ]
  }
}
